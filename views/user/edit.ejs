<body>
  <%- include('../components/theme.ejs') %>

    <main class="d-flex flex-nowrap">
      <div id="sidebarId" class="position-relative d-flex flex-column flex-shrink-0 p-3 text-bg-dark sidebar">
        <span style="right: 10px; top: 2px" class="position-absolute">
          <button class="btn" onclick="toggleSidebar()">
            <i class="bi bi-x-circle"></i>
          </button>
        </span>

        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
          <i class="bi bi-lightning-charge"></i>
          <span class="fs-4 sidebar-text">Sidebar</span>
        </a>
        <hr />
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="/" class="nav-link text-white" aria-current="page">
              <svg class="bi pe-none me-2" width="16" height="16">
                <use xlink:href="#home" />
              </svg>
              <span class="sidebar-text"> Home </span>
            </a>
          </li>

          <li>
            <a href="add.html" class="nav-link text-white">
              <svg class="bi pe-none me-2" width="16" height="16">
                <use xlink:href="#people-circle" />
              </svg>
              <span class="sidebar-text"> Add Customers </span>
            </a>
          </li>
        </ul>
        <hr />
      </div>

      <div class="b-example-divider b-example-vr"></div>

      <section class="w-100" style="position: relative;">
        <%- include('../components/navbar.ejs') %>


          <nav class="px-2 mt-4 d-flex flex-wrap justify-content-between" aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                <%= current[0].firstname + " " + current[0].lastname%>
              </li>
            </ol>


            <p class="me-md-5"> <span class="fw-medium fs-6">Id :</span>
              <%= userID %>
            </p>
          </nav>








          <form action="/updateuser/<%= current[0]._id %>?_method=PUT" method="post" class="mx-0 row gx-3 gy-4 mt-2">
            <div class="col-md-6">
              <label for="inputfirstName4" class="form-label">First Name:</label>
              <input value=" <%= current[0].firstname %> " type="text" name="firstname" class="form-control"
                id="inputfirstName4" />
            </div>
            <div class="col-md-6">
              <label for="inputlastName4" class="form-label">Last Name:</label>
              <input value=" <%= current[0].lastname%> " type="text" name="lastname" class="form-control"
                id="inputlastName4" />
            </div>

            <div class="col-md-6">
              <label for="inputemail4" class="form-label">Email:</label>
              <input value=" <%= current[0].email %> " type="email" class="form-control" id="inputemail4"
                name="email" />
            </div>
            <div class="col-md-6">
              <label for="inputtele4" class="form-label">Telephone:</label>
              <input value=<%="0"+current[0].phone %>
              type="number"
              name="phone"
              class="form-control"
              id="inputtele4"

              />
            </div>

            <div>
              <div class="col-md-6">
                <label for="inputage4" class="form-label">Age:</label>
                <input value=<%=current[0].age %>
                type="number"
                class="form-control"
                name="age"
                id="inputage4"
                />
              </div>
            </div>

            <div>
              <div class="col-md-6">
                <label for="inputCountry" class="form-label">Country:</label>
                <select id="inputCountry" class="form-select" name="country">
                  <option selected hidden disabled>Choose here ...</option>
                  <% country.forEach(element=> { %>
                    <option value="<%= element %>" <%=current[0].country==element? "selected" :null %>><%= element %>
                    </option>
                    <% }) %>
                </select>
              </div>
            </div>

            <div>
              <div class="col-md-6">
                <label for="inputGender" class="form-label">Gender:</label>
                <select id="inputGender" class="form-select" name="gender">
                  <option selected hidden disabled>Choose here ...</option>
                  <% if (current[0].gender=="male" ) { %>
                    <option value="male" selected>male</option>
                    <option value="female">female</option>
                    <% } %>

                      <% if (current[0].gender=="female" ) { %>
                        <option value="male">male</option>
                        <option value="female" selected>female</option>
                        <% } %>
                </select>
              </div>
            </div>

            <div class="col-12">
              <button type="submit" class="btn btn-primary">
                Update changes
              </button>

              
            </div>
          </form>
          <form action="/deleteuser/<%= current[0].id %>?_method=DELETE" method="post" class="d-inline" style="position: absolute;left: 200px; bottom: 0; ">

            <button  type="submit" class="btn btn-danger">
              Delete Customer
            </button>
          </form>
      </section>
