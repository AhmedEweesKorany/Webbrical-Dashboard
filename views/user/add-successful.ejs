        const inputs = document.querySelectorAll('input')
document.getElementById("submit-add").onclick = function check(e){
    inputs.forEach((item)=>{
      if(item.value.trim()== ""){
        if(item.type != "search"){
          e.preventDefault()
          item.classList.add("empty")
          if(item.classList.contains("empty")){
            item.style.borderColor = "red"
            item.onchange = ()=>{
